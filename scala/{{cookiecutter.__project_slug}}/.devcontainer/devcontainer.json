{
    "$schema": "https://typedoc.org/schema.json",
    "image": "sbtscala/scala-sbt:graalvm-community-21.0.2_1.10.10_2.13.16",
    "customizations": {
        "vscode": {
            "extensions": [
                "scalameta.metals",
                "scala-lang.scala",
                "oderwat.indent-rainbow",
                "shardulm94.trailing-spaces",
            ],
            "settings": {
                "[scala]": {
                    "editor.indentSize": 2,
                    "editor.tabSize": 2,
                    "editor.formatOnSave": false,
                    "editor.detectIndentation": false
                },
            }
        }
    }
}
