{
    "$schema": "https://typedoc.org/schema.json",
    "containerUser": "ubuntu",
    "build": {"dockerfile": "../Dockerfile"},
    "customizations": {
        "vscode": {
            "extensions": [
                "scalameta.metals",
                "scala-lang.scala",
            ],
            "settings": {
                "[scala]": {
                    "editor.indentSize": 2,
                    "editor.formatOnSave": true,
                }
            }
        }
    }
}
