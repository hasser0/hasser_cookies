{
    "$schema": "https://typedoc.org/schema.json",
    "build": {
        "dockerfile": "Dockerfile",
    },
    "postStartCommand": "cs setup -y && cs install scala:{{ cookiecutter.scala_version }}",
    "customizations": {
        "vscode": {
            "extensions": [
                "scalameta.metals",
                "scala-lang.scala",
                "oderwat.indent-rainbow",
                "shardulm94.trailing-spaces"
            ],
            "settings": {
                "[scala]": {
                    "editor.indentSize": 2,
                    "editor.tabSize": 2,
                    "editor.formatOnSave": false,
                    "editor.detectIndentation": false
                },
            }
        }
    },
}
